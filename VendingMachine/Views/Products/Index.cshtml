@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center">Vending Machine Products</h1>
<hr />


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Products" asp-action="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Add New Product </a>
        </div>
    </div>
</div>



<form asp-action="Search" asp-controller="Products">
    <div class="input-group md-form form-control-sm form-2 pl-0">
        <input name="searchValue" class="form-control my-0 py-1 " type="text" placeholder="Search By Category" aria-label="Search" />
        <div class="input-group-append">
            <span class="input-group-text  " id="basic-text1">
                <button type="submit">
                    <i class="fas fa-searh "
                       aria-hidden="true"><i class="bi bi-search"></i></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped style=" width:100%"">
    <thead>
        <tr>
            <th>
                Product List
            </th>
            <th>
              Optiuni
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Nume

                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Products" asp-action="VizualizareDetalii" asp-route-id="@obj.ID"
                           class="btn btn-dark mx-2">  <i class="bi bi-eye-fill"></i>  Vizualizare detalii</a>
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@obj.ID"
                           class="btn btn-primary mx-2">  <i class="bi bi-pencil-square"></i>  Edit</a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@obj.ID"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts{
    <script>
        $(function () {
            $("#basic-text1").click(function () {
                $("Eorm").submit();
            })
        });
    </script>
}